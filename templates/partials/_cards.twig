<!--CARDS-->
  <div class="pb-5 bg-light" style="">
    <div class="container cards-section">
      <div class="row pb-2">
        <div class="col-md-4" style="">
          <div class="row py-2 mx-auto" style="">
            <div class="col-md-12 pb-5">                
                
              <h3 class="text-secondary header-shadow p-2"><i class="fa fa-user"></i> &nbsp; {{entry.offeringHeadline}}</h3>
              <p class="lead">{{entry.offeringContent}}</p><a class="btn btn-red btn-md" href="#"><i class="far fa-arrow-alt-circle-right"></i> &nbsp;Learn More</a>

            </div>
          </div>
        </div>
        <div class="col-md-4" style="">
          <div class="row py-2 mx-auto" style="">
            <div class="col-md-12 pb-5">
              <h3 class="text-secondary header-shadow p-2"><i class="fa fa-truck"></i>&nbsp; {{entry.qualificationHeadline}}</h3>
              <p class="lead">{{entry.qualificationContent}}</p><a class="btn btn-red btn-md" href="#"><i class="far fa-arrow-alt-circle-right"></i> &nbsp;Learn More</a>
            </div>
          </div>
        </div>
        <div class="col-md-4 applyBannerColumn" style="">
          <div class="row applyBanner py-2 px-1 mx-auto" style="">
            <div class="col-md-12">
              <h3 class="" contenteditable="true"><i class="fa fa-fw fa-search"></i>Find Your Next Job</h3>
              <p class="lead" style="">We've made it easy to find your next job. Search from hundreds of jobs throughout the country and learn why ABC is the best.<br></p>
              <a class="btn btn-block btn-lg btn-success" href="/jobs"><i class="fa fa-search"></i> &nbsp;FIND MY NEXT JOB</a> 
               {% if entry.phone %}                  
              <h5 class="pt-3">NEED TO TALK? Call a recruiter now. {{entry.phone}}</h5>                           
              {% else %}
              <h5 class="pt-3">NEED TO TALK? Call a recruiter now. {{global.phone}}</h5>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>